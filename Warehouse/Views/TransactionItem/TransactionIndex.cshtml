@* ﻿@model IEnumerable<ItemDto> *@

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Items List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<table class="table">
			<thead>
				<tr>
					<th>
						Item Name
					</th>
					<th>
						Item Amount
					</th>
					<th>
						Item Status
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.ItemName
						</td>
						<td>
							@((item.ItemAmount).ToString())
						</td>
						<td>
							@if (item.Status == 1)
							{
								<p>Active</p>
							}
							else
							{
								<p>Non-Active</p>
							}
						</td>
						<td>
							<a class="btn btn-success" asp-action="Order" asp-route-id="@item.ItemID">
								Order
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>